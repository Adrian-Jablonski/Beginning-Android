<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/calculationInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="40dp"
                android:gravity="right"
                android:paddingRight="20dp"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/calculationAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="70dp"
            android:gravity="right"
            android:paddingRight="20dp"
            />
    </LinearLayout>

    <!--Row 0-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="190dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/backspace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24dp"
                android:text="Backspace" />
        </LinearLayout>

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/clearButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24dp"
                android:text="CLear" />
        </LinearLayout>


    </LinearLayout>

    <!--Row 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="240dp"
        android:orientation="horizontal">



        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/NumberButtons"
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7" />
        </LinearLayout>

        <!--style="@style/NumberButtons" is a style defined in styles.xml. (Similar to css classes) -->
        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8" />
        </LinearLayout>

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            style="@style/FunctionButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/" />
        </LinearLayout>
    </LinearLayout>

    <!--Row 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="330dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/NumberButtons"
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4" />
        </LinearLayout>

        <!--style="@style/NumberButtons" is a style defined in styles.xml. (Similar to css classes) -->
        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5" />
        </LinearLayout>

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            style="@style/FunctionButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/multiplication"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*" />
        </LinearLayout>
    </LinearLayout>

    <!--Row 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="420dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1" />
        </LinearLayout>

        <!--style="@style/NumberButtons" is a style defined in styles.xml. (Similar to css classes) -->
        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/NumberButtons"
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3" />
        </LinearLayout>


        <LinearLayout
            style="@style/FunctionButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/subtraction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>

    <!--Row 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="510dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/NumberButtons"
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0" />
        </LinearLayout>

        <!--style="@style/NumberButtons" is a style defined in styles.xml. (Similar to css classes) -->
        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/buttonDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            style="@style/NumberButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="=" />
        </LinearLayout>

        <LinearLayout
            style="@style/FunctionButtonsContainer"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                style="@style/NumberButtons"
                android:id="@+id/addition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="412dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="99dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>